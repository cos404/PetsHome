.custom-control.custom-checkbox
  = f.check_box :moderation, label: false, class: "custom-control-input"
  = f.label :moderation, class: "custom-control-label"
.custom-control.custom-checkbox
  = f.check_box :verified, label: false, class: "custom-control-input"
  = f.label :verified, class: "custom-control-label"
= f.input :status, as: :select, collection: Shelter.statuses.keys.collect{|s| [t("view.shelter.select.statuses.#{s.downcase}"), s]}, include_blank: false, id: :status, class: "custom-select", label: t("view.shelter.status")
.schedule
  = f.simple_fields_for :schedules do |s|
    %fieldset.mb-2
      .input-group
        .input-group-prepend
          %span.input-group-text= I18n.t("view.shelter.day_of_week.#{s.object.day_of_week}")
        = s.input_field :open, as: :time, html5: true, label: false, class: "form-control"
        = s.input_field :close, as: :time, html5: true, label: false, class: "form-control"
        = s.hidden_field :day_of_week