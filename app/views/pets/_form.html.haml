= f.input :name, label: t('view.pet.name')
= f.input :subspecies, as: :select, collection: Pet.subspecies.keys.collect{|s| [t("view.pet.select.subspecies.#{s.downcase}"), s]}, include_blank: false, label: t('view.pet.subspecies')
= f.input :size, as: :select, collection:       Pet.sizes.keys.collect{|s| [t("view.pet.select.size.#{s.downcase}"), s]}, include_blank: false, label: t('view.pet.size')
= f.input :gender, as: :select, collection:     Pet.genders.keys.collect{|s| [t("view.pet.select.gender.#{s.downcase}"), s]}, include_blank: false, label: t('view.pet.gender')
%div.row
  %div.col-md-6
    = f.input :euthanasia, as: :date, html5: true, label: t('view.pet.euthanasia')
  %div.col-md-6
    = f.input :birthday, as: :date, html5: true, label: t('view.pet.birthday')
= f.input :vaccination, label: t('view.pet.vaccination')
= f.input :sterilization, label: t('view.pet.sterilization')
= f.input :color, label: t('view.pet.color')
= f.input :about, input_html:{rows: 4}, label: t('view.pet.about')
= f.input :diseases, input_html:{rows: 4}, label: t('view.pet.diseases')