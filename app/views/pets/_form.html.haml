= f.input :name
= f.input :subspecies, as: :select, collection: Pet.subspecies.keys.to_a, include_blank: false
= f.input :size, as: :select, collection: Pet.sizes.keys.to_a, include_blank: false
= f.input :gender, as: :select, collection: Pet.genders.keys.to_a, include_blank: false
%div.row
  %div.col-md-6
    = f.label :euthanasia
    %div.euthanasia.input-group
      %div.input-group-addon
        = f.input :euthanasia, as: :boolean, label: false
      = f.input :euthanasia_date, as: :date, html5: true, label: false
  %div.col-md-6
    = f.input :birthday, as: :date, html5: true
= f.input :vaccination
= f.input :sterilization
= f.input :color
= f.input :about, input_html:{rows: 4}
= f.input :diseases, input_html:{rows: 4}