%section.col-md-6.col-sm-12.block-img.float-right
  .row
    %section.main-img
      %img{name: "main_img", src: "#{@pet.avatar.url}"}/
  .row
    %section.img-scroll
      %div#photos
        %div= link_to (image_tag(@pet.avatar.url)), ("javascript:select_image(\"#{@pet.avatar.url}\")")
        - @pet.pet_photos.each do |photo|
          = link_to (image_tag(photo.title.thumb.url)), ("javascript:select_image(\"#{photo.title.url}\")")
      - if policy(@pet).edit?
        %div
          = simple_form_for ShelterPhoto.new, url: pet_pet_photos_path(@pet.id) do |f|
            #uploader.fileUpload.btn.btn-outline-primary
              %span= fa_icon('plus')
              = f.file_field :shelter_photo, multiple: true, name: "photo[title]", class: 'upload'