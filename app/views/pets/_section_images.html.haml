%section.col-md-6.col-sm-12.float-right
  .row.main-img
    %img{name: "main_img", src: "#{@pet.avatar.url}"}/
  .row
    %section.img-scroll
      %div#photos
        - if @pet.avatar.blank?
          %div= link_to (image_tag(@pet.avatar.thumb.url)), ("javascript:select_image(\"#{@pet.avatar.url}\")")
        - @pet.pet_photos.each do |photo|
          .photo
            = link_to (image_tag(photo.title.thumb.url)), ("javascript:select_image(\"#{photo.title.url}\")")
            - if policy(@pet).edit?
              .img-controll
                - if @pet.avatar.url != photo.title.url
                  = fa_icon "check-circle", title:t('view.button.avatar'), class: "photo_main"
                  = fa_icon "times-circle", title:t('view.button.delete'), data:{id: photo.id, confirm:t('view.button.delete_confirm'), type: :pet_photos} , class: "photo_delete"
                - else
                  = fa_icon "info-circle", title:t('view.button.avatar')
      - if policy(@pet).edit?
        %div
          = simple_form_for ShelterPhoto.new, url: pet_pet_photos_path(@pet.id) do |f|
            #uploader.fileUpload.btn.btn-outline-primary
              %span= fa_icon('plus')
              = f.file_field :shelter_photo, multiple: true, name: "photo[title]", class: 'upload'
