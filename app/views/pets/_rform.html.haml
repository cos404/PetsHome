= f.input :vaccination, label: t('view.pet.vaccination')
= f.input :sterilization, label: t('view.pet.sterilization')
%span= f.label :subspecies, t('view.pet.subspecies'), class: "badge badge-info"
= f.input :subspecies, as: :select, collection: Pet.subspecies.keys.collect{|s| [t("view.pet.select.subspecies.#{s.downcase}"), s]}, include_blank: false, label: false
