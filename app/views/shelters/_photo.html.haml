.photo
  = link_to (image_tag(photo.title.thumb.url)), ("javascript:select_image(\"#{photo.title.url}\")")
  - if policy(@shelter).edit?
    - if @shelter.cover.url != photo.title.url
      .img-controll
        = fa_icon "check-circle", title:t('view.button.cover'), data:{id: photo.id, confirm:t('view.button.cover_confirm'), type: :shelter}, class: "set-photo"
        = fa_icon "times-circle", title:t('view.button.delete'), data:{id: photo.id, confirm:t('view.button.delete_confirm'), type: :shelter_photos} , class: "photo-delete"
    - else
      #main-image.img-controll
        = fa_icon "info-circle", title:t('view.button.cover'), data:{id: photo.id, type: :shelter}