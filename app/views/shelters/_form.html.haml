= f.input :title
= f.association :country, label_method: :title, value_method: :id, include_blank: true
= f.input :region_id, as: :grouped_select, include_blank: false, disabled:true
= f.input :city_id, as: :grouped_select, include_blank: false, disabled:true
= f.input :street
= f.input :house_number
= f.input :latitude
= f.input :longitude
= f.input :about, input_html:{rows: 7}
= f.simple_fields_for :phones do |builder|
  = render partial: 'phone_fields', locals: {f: builder}
= button_add_fields fa_icon("phone"), f, :phones, 'btn btn-outline-secondary'
.schedule
  = f.simple_fields_for :schedules do |s|
    = render partial: "schedule_fields", locals: {f: s}
