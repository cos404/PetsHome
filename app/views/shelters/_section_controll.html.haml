%section.row
  %div.col-md-12
    %button#edit-shelter.btn.btn-info.btn-sm.mr-2= link_to fa_icon("pencil"), edit_shelter_path(@shelter), {title: t('view.button.edit')}
    %button#add-pet.btn.btn-info.btn-sm.mr-2= link_to fa_icon("plus"), new_shelter_pet_path(@shelter), {title: t('view.button.add-pet')}
    = link_to shelter_staffs_path(@shelter.id), remote: true, id: "staffs", class: "mr-2" do
      %button.btn.btn-info.btn-sm{title: t('view.button.staffs'), type: :button, data:{toggle:"modal", target:"#modal-staffs"}}= fa_icon("user")
= render partial: "modal_staffs"


