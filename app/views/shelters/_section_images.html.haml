%section.col-md-6.col-sm-12.float-right
  .row.main-img
    %img{name: "main_img", src: "#{@shelter.cover.url}"}/
  .row
    %section.img-scroll
      %div#photos
        - if @shelter.cover.blank?
          %div= link_to (image_tag(@shelter.cover.thumb.url)), ("javascript:select_image(\"#{@shelter.cover.url}\")")
        - @shelter.shelter_photos.each do |photo|
          .photo
            = link_to (image_tag(photo.title.thumb.url)), ("javascript:select_image(\"#{photo.title.url}\")")
            - if policy(@shelter).edit?
              .img-controll
                - if @shelter.cover.url != photo.title.url
                  = fa_icon "check-circle", title:t('view.button.cover'), class: "photo_main"
                  = fa_icon "times-circle", title:t('view.button.delete'), data:{id: photo.id, confirm:t('view.button.delete_confirm'), type: :shelter_photos} , class: "photo_delete"
                - else
                  = fa_icon "info-circle", title:t('view.button.cover')
      - if policy(@shelter).edit?
        %div
          = simple_form_for ShelterPhoto.new, url: shelter_shelter_photos_path(@shelter.id) do |f|
            #uploader.fileUpload.btn.btn-outline-primary
              %span= fa_icon('plus')
              = f.file_field :shelter_photo, multiple: true, name: "photo[title]", class: 'upload'
