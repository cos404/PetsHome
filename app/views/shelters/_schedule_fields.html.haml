.schedule
  = f.simple_fields_for :schedules do |s|
    %fieldset.mb-2
      .input-group
        .input-group-prepend
          %span.input-group-text= I18n.t("view.shelter.day_of_week.#{s.object.day_of_week}")
        = s.input_field :open, as: :time, html5: true, label: false, class: "form-control"
        = s.input_field :close, as: :time, html5: true, label: false, class: "form-control"
        = s.hidden_field :day_of_week