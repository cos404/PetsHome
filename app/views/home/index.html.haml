= javascript_tag do
  var shelters        = "#{@shelters}",
  longitude           = "#{@geo['longitude']}",
  latitude            = "#{@geo['latitude']}";
%section
  %article.top-text
    %h1.text-center= t 'view.home.tagline'
  .top-img{style: "background-image: url(https://dajlapu.com/wp-content/uploads/2016/01/%D0%9F%D0%BE%D1%80%D0%BE%D0%B4%D0%B0-%D1%81%D0%BE%D0%B1%D0%B0%D0%BA%D0%B8-%D0%B8%D0%B7-%D1%84%D0%B8%D0%BB%D1%8C%D0%BC%D0%B0-%D0%BC%D0%B0%D1%81%D0%BA%D0%B0-%D0%BD%D0%B0%D0%B7%D0%B2%D0%B0%D0%BD%D0%B8%D0%B5.jpg);"}
#map.map
= render partial: "layouts/category-menu", locals:{category: @category}
.container.mt-2
  .row
    - @pets.each do |pet|
      %section.col-md-3.col-sm-6.col-12.mb-2.card-a
        = link_to shelter_pet_path(pet.shelter_id, pet.id) do
          %article.card-s
            %h2.text-center= "#{t 'view.home.near'}"
            %article
              .card-img
                %img.img-fluid= image_tag pet.avatar
              %h3.text-center.mt-1= pet.name
              %h4= pet.city
              %h4
                = "#{t 'view.pet.birthday'}: #{pet.birthday}"