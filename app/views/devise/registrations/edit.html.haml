.col-12.col-lg-6
  %h2= t(".title")
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :avatar, as: :file, wrapper: :file_input, label: t(".avatar")
      = f.input :email, required: true, autofocus: true
      = f.input :email_visible, label: t(".email_visible")
      = f.input :fullname, label: t(".fullname")
      = f.input :about, label: t(".about")
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          = t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email)
      = f.input :password, autocomplete: "off", placeholder: t(".leave_blank_if_you_don_t_want_to_change_it"), required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, placeholder: t(".we_need_your_current_password_to_confirm_your_changes"), required: true
    .form-actions
      = f.button :submit, t(".update")
  = link_to t("devise.shared.links.back"), current_user
